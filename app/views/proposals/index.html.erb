<% content_for :title, "Proposals" %>

<div class="d-flex justify-content-between align-items-center mb-3">
  <h1 class="h3 mb-0">Proposals</h1>
</div>

<% if @proposals.any? %>
  <div class="row g-3">
    <% @proposals.each do |proposal| %>
      <div class="col-md-6 col-lg-4">
        <%= render "proposal_card", proposal: proposal %>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="card text-center shadow-sm">
    <div class="card-body">
      <h5 class="card-title">No proposals yet</h5>
      <p class="card-text text-muted">
        You havenâ€™t submitted or received any proposals.
      </p>

      <% if current_user&.freelancer? %>
        <%= link_to "Submit your first proposal",
                    new_proposal_path,
                    class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
<% end %>
