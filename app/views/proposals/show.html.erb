<% content_for :title, "Proposal" %>

<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card shadow-sm mb-3">
      <div class="card-body">
        <div class="d-flex justify-content-between align-items-start mb-3">
          <div>
            <h1 class="h4 mb-1">Proposal</h1>
            <p class="text-muted small mb-0">
              Submitted <%= time_ago_in_words(@proposal.created_at) %> ago
            </p>
          </div>

          <% if @proposal.respond_to?(:status) %>
            <span class="badge
              <%= case @proposal.status
                  when "accepted" then "bg-success"
                  when "rejected" then "bg-danger"
                  else "bg-secondary"
                  end %>">
              <%= @proposal.status.capitalize %>
            </span>
          <% end %>
        </div>

        <hr>

        <h6 class="text-muted">Project</h6>
        <p>
          <%= link_to @proposal.project.title,
                      project_path(@proposal.project),
                      class: "text-decoration-none fw-semibold" %>
        </p>

        <h6 class="text-muted mt-3">Message</h6>
        <p class="mt-2">
          <%= simple_format(@proposal.message) %>
        </p>
      </div>
    </div>

    <div class="d-flex justify-content-between align-items-center">
      <%= link_to "â† Back to proposals",
                  proposals_path,
                  class: "btn btn-link px-0" %>

      <% if current_user == @proposal.freelancer %>
        <div class="d-flex gap-2">
          <%= link_to "Edit",
                      edit_proposal_path(@proposal),
                      class: "btn btn-outline-secondary btn-sm" %>

          <%= button_to "Delete",
                        proposal_path(@proposal),
                        method: :delete,
                        data: { turbo_confirm: "Are you sure you want to delete this proposal?" },
                        class: "btn btn-outline-danger btn-sm" %>
        </div>
      <% end %>

      <% if current_user == @proposal.project.client && @proposal.status == "pending" %>
        <%= button_to "Accept proposal",
                      accept_proposal_path(@proposal),
                      method: :patch,
                      data: { turbo_confirm: "Accept this proposal and reject all others?" },
                      class: "btn btn-success btn-sm" %>
      <% end %>
    </div>
  </div>
</div>
