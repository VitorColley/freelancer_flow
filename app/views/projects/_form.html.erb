<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card shadow-sm">
      <div class="card-body">
        <%= form_with(model: project, class: "vstack gap-3") do |form| %>

          <% if project.errors.any? %>
            <div class="alert alert-danger">
              <h6 class="alert-heading">
                <%= pluralize(project.errors.count, "error") %> prevented this project from being saved:
              </h6>
              <ul class="mb-0">
                <% project.errors.each do |error| %>
                  <li><%= error.full_message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div>
            <%= form.label :title, class: "form-label" %>
            <%= form.text_field :title,
                  class: "form-control",
                  placeholder: "e.g. Build a Rails web application" %>
          </div>

          <div>
            <%= form.label :description, class: "form-label" %>
            <%= form.textarea :description,
                  rows: 5,
                  class: "form-control",
                  placeholder: "Describe the scope, requirements, and expectations of the project…" %>
          </div>

          <div class="row">
            <div class="col-md-6">
              <%= form.label :budget, class: "form-label" %>
              <%= form.text_field :budget,
                    class: "form-control",
                    placeholder: "e.g. €1,500" %>
            </div>

            <div class="col-md-6">
              <%= form.label :status, class: "form-label" %>
              <%= form.text_field :status,
                    class: "form-control",
                    disabled: true %>
              <div class="form-text">
                Status is managed automatically.
              </div>
            </div>
          </div>

          <div class="d-flex justify-content-between mt-3">
            <%= link_to "Cancel",
                        projects_path,
                        class: "btn btn-link px-0" %>

            <%= form.submit project.persisted? ? "Update project" : "Create project",
                  class: "btn btn-primary" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>
